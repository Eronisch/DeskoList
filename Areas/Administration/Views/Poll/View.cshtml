@using Localization.Languages.Admin.Views.Poll
@model Core.Models.Poll.PollResultModel
<div class="resultsTable nav-tabs-custom">
    <ul class="nav nav-tabs pull-right">
        <li class="pull-left header"><i class="fa fa-th"></i> @Model.Question (@Model.AmountVotes)</li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>@View.Answer</th>
                    <th>@View.Votes</th>
                    <th>@View.Percentage</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var answer in Model.Answers)
                    {
                        <tr>
                            <td>@answer.Answer</td>
                            <td>@answer.AmountVotes</td>
                            <td>@answer.Percentage</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div><!-- /.tab-pane -->
    </div><!-- /.tab-content -->
</div>
