@using Localization.Languages.Admin
@using Localization.Languages.Admin.Views.Elmah
<div id="elmahIndex">
    <button id="cleanErrors" class="btn btn-danger pull-right">@Index.DeleteAllButton</button>

    <table id="errorsTable" class="table table-striped">
        <thead>
            <tr>
                <th data-hide="phone">@Index.Type</th>
                <th>@Index.Message</th>
                <th data-hide="phone">@Index.Sequence</th>
                <th data-hide="phone">@Index.Status</th>
                <th>@Index.Date</th>
            </tr>
        </thead>
    </table>

    <div id="deleteErrorsModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">@Index.CleanErrorsTitle</h4>
                </div>
                <div class="modal-body">
                    <p>@Index.CleanErrorsDescription</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Index.CancelButton</button>
                    @Html.ActionLink(Index.DeleteAllButton, "Clean", "Elmah", null, new {@class = "btn btn-primary"})
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>

@section footer{

    @Scripts.Render("~/Areas/Administration/Content/Javascript/fooTable")

    <script type="text/javascript">
        $(function() {
            window.setupFooTable.init('#errorsTable', '/Administration/Elmah/GetErrors', "@Common.Search", 8);

            $('#cleanErrors').on('click', function() {
                $('#deleteErrorsModal').modal('show');
            });
        });
    </script>
}