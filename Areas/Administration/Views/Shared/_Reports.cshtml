@{
    Layout = null;
}
@using Localization.Languages.Admin.Views.Shared
@model Topsite.Areas.Administration.Models.Report.ReportBundleModel

<li class="dropdown messages-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-flag"></i>
        <span class="label label-success">@Model.AmountReports</span>
    </a>
    <ul class="dropdown-menu">
        <li class="header">@string.Format(_Reports.ReportsMessage, Model.AmountReports)</li>
        @if (Model.Reports.Any())
        {
            <li>
                <ul class="menu">
                    @foreach (var report in Model.Reports)
                    {
                        <li>
                            <a href="@Url.Action("View", "Reports", new {id = report.ReportId})">
                                <h4>
                                    @report.WebsiteTitle
                                    <small><i class="fa fa-clock-o"></i> @report.TimeAgo</small>
                                </h4>
                                <p>@report.Reason</p>
                            </a>
                        </li>
                    }
                </ul>
            </li>
        }
        <li class="footer">@Html.ActionLink(_Reports.ViewAllReports, "Index", "Reports")</li>
    </ul>
</li>